# Wisconsin Legal RAG - Environment Variables
# Copy this file to .env and fill in your API keys

# Google Gemini API (get from https://aistudio.google.com/apikey)
GOOGLE_API_KEY=your_google_api_key_here

# Pinecone API (get from https://app.pinecone.io)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_HOST=your_pinecone_host_here

# Cohere API (get from https://dashboard.cohere.com/api-keys)
COHERE_API_KEY=your_cohere_api_key_here

# Pinecone settings
PINECONE_INDEX_NAME=wisconsin-legal

# Cohere rerank model (v4.0-pro is the latest multilingual model)
RERANK_MODEL=rerank-v4.0-pro

# Retrieval Settings
# TOP_K=20  # Initial hybrid search retrieval
# TOP_N=5   # Final count after Cohere reranking
# ALPHA=0.5 # Hybrid search balance: 0.0=BM25, 0.5=balanced, 1.0=semantic

# Chunking Settings
# CHUNK_SIZE=1000
# CHUNK_OVERLAP=200

# API Settings
# CORS_ORIGINS=["http://localhost:3000"]
# MAX_FILE_SIZE=10485760
